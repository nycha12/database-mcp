# Environment variables for Database MCP Server

# SQL Server connection settings
DB_SERVER=localhost
# Or for Azure SQL: yourserver.database.windows.net

# Database name
DB_DATABASE=DBName

# SQL Server Authentication (leave empty for Windows Authentication)
DB_USER=
DB_PASSWORD=

# Optional: Windows domain (for NTLM authentication)
DB_DOMAIN=

# Connection options
DB_PORT=1433
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

